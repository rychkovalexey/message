{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <ul class="" aria-labelledby="navbarDropdown">
        <li><a class="" href="{{ path('front') }}">Main</a></li>
        <li><a class="" href="{{ path('message_new') }}">Add message</a></li>
        <li><a class="" href="{{ path('message_index') }}">Message report</a></li>
        {% if is_granted('ROLE_USER') %}
            <li><a class=""  href="{{ url('app_logout') }}">Logout</a></li>
        {% else %}
            {% if countUsers()>0  %}
                <li><a class=""  href="{{ url('app_login') }}">Login</a></li>
            {% else %}
                <li><a class=""  href="{{ url('user_new') }}">Register</a></li>
            {% endif %}
        {% endif %}
    </ul>

</div>
{% endblock %}
